	int opc, i=0, k=0 , j=0, n, A[NMAX][NMAX], B[NMAX][NMAX], C[NMAX][NMAX], aux, ent, l=0, p=0,q=0;
	float D[NMAX][NMAX], E[NMAX][NMAX], F[NMAX][NMAX], det=0, DET, ;
	 
