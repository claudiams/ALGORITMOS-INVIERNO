					while (k =0 ; k < n ; k++)
					{
						k=0;
						aux  = aux + ( A[i][j] * B[i][j] );		
						k++:

					}
					 C[i][j] =  aux;
					j++;				}
			i++:

			}
				
			cout<< “La Matriz Resultante es: ” << endl;				
			while (i=0; i<n; i++)
			{
