				i++;
			}

			while (i=0; i<n; i++)
			{
				i=0;
				while (j=0; j<n ; j++)
				{
					j=0;
					C[i][j] = A[i][j] + B[i][j];
					j++;
				}
				i++:
			{

			cout<< “La Matriz Resultante es: ” << endl;				
			while (i=0; i<n; i++)
			{
				i=0;
				while (j=0; j<n ; j++)
				{
					j=0;
					cout  << C[i][j] << “\t";
					j++;

