			while (i<n)
			{
				while(j<n)
				{
					while(k<n)
					{
						while(l<n)
						{
							i=1;
         						   	j=1;
							k=0;
							l=0
          		 					D[k][l]=A[i][j];
							
							l++;
							
						}
						k++;
					}
					j++;
}
i++;
			}




while(i<n)
 {
	i=0;
	while(j<n);
	{	
		j=0;
   	while(k<n)
   	{
			k=0;
			p=0;
        		if(k==p)
        		{
            		k++;
        		}
        		while(l<n)
        		{
				l=0;
				q=0;
            		if(q==l)
            		{
                			l++;
            		}
            		D[p][q]=A[k][l];
				l++;
				q++;
        		}
			k++;
			p++;
    	}
    
   		det = (D[0][0]*D[1][1])-(D[0][1]*D[1][0]);
		E[i][j] = det * pow(-1, i+j);
              	j++;
}
i++;
		}
			while (i=0; i<n; i++)
			{
				i=0;
				while ( j<n )
				{
					j=i+1;
					if(j>i)
					{
						aux = E[i][j];
						E[i][j] = E[j][i];
						E[j][i] = aux;
					}
					j++;
				}
				i++;
			}
 	 	 	while(j<n;)
			{
				j=0;
				DET = DET + A[1][j]*E[1][j];
  				 j++;
			}

			while (i=0; i<n; i++)
			{
				i=0;
				while (j=0; j<n ; j++)
				{
					j=0;
					F[i][j] = E [i][j] * DET;
					j++;
				}
				i++:
			{

			cout<< “La Matriz Resultante es: ” << endl;		
			while (i=0; i<n; i++)
			{
